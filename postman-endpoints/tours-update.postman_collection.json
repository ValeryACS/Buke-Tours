{
  "info": {
    "name": "Buke Tours - Tours Update",
    "description": "Actualiza un tour mediante /api/tours/update.php",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "POST Actualizar Tour",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "id", "value": "1" },
            { "key": "sku", "value": "TOUR-EXAMPLE-UPDATED" },
            { "key": "title", "value": "Tour Actualizado" },
            { "key": "location", "value": "San José, Costa Rica" },
            { "key": "price_usd", "value": "75.00" },
            { "key": "img", "value": "https://example.com/tour-new.jpg" },
            { "key": "description", "value": "Descripción actualizada" },
            { "key": "cupon_code", "value": "BUKE15" },
            { "key": "cupon_discount", "value": "15" },
            { "key": "rating", "value": "4.9" },
            { "key": "duration_hours", "value": "4" },
            { "key": "discount", "value": "8" },
            { "key": "iframe", "value": "<iframe>...nuevo...</iframe>" },
            { "key": "adults_limit", "value": "12" },
            { "key": "children_limit", "value": "6" }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/Buke-Tours/api/tours/update.php",
          "host": ["{{baseUrl}}"],
          "path": ["Buke-Tours", "api", "tours", "update.php"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost" }
  ]
}
